{
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
    },
    "ecmaFeatures": {
        "experimentalObjectRestSpread": true
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true,
        "es6": true
    },
    "globals": {
        "sinon": true,
        "expect": true
    },
    "rules": {
        "semi": 2
    }
}
